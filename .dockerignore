# - Dockerfile
# - fly.toml
# - pyproject.toml
# - src/

# Scripts that aren't needed at runtime
scripts/
*.sql

# CI/CD
.github/
.circleci/
.gitlab-ci.yml

# Temporary files
tmp/
temp/
*.tmp

