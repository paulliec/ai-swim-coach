# Frontend (not needed for backend)
frontend/
node_modules/

# Python virtual environments
.venv/
venv/
env/
ENV/

# Python cache
__pycache__/
*.py[cod]
*$py.class
*.so
.Python

# Environment files (secrets should use Fly.io secrets)
.env
.env.*
!.env.template

# Git
.git/
.gitignore
.gitattributes

# IDE
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Documentation
*.md
!README.md
docs/
GETTING_STARTED.md
IMPLEMENTATION_SUMMARY.md

# Testing
tests/
.pytest_cache/
.coverage
htmlcov/
.tox/

# Build artifacts
build/
dist/
*.egg-info/
.eggs/

# Logs
*.log
logs/

